{
  "name": "quasar-browser-extension",
  "description": "A Quasar web extension",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16x16.png",
    "48": "icons/icon48x48.png",
    "128": "icons/icon128x128.png"
  },
  "background": {
    "scripts": [
      "js/background.js",
      "js/webRequestTransformer.js"
    ],
    "persistent": true
  },
  "content_scripts": [{
    "matches": ["https://quasar.dev*"],
    "js": [
      "js/initBexOverlay.js",
      "js/contentScript.js"
    ],
    "css": [
      "css/contentCss.css"
    ]
  }],
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "www/*",
    "js/*",
    "css/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' http://127.0.0.1; object-src 'self'"
}
